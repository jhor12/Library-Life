<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Editar Usuario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <style>
    body {
      background-color: #f5f7fa;
    }

    .sidebar {
      width: 250px;
      background-color: #fff;
      height: 100vh;
      position: fixed;
      border-right: 1px solid #dee2e6;
    }

    .sidebar .user-info {
      text-align: center;
      padding: 20px 10px;
    }

    .sidebar .user-info img {
      border-radius: 50%;
    }

    .sidebar .nav-link.active {
      background-color: #f8d7da;
      color: #dc3545;
      font-weight: bold;
    }

    .main-content {
      margin-left: 250px;
      padding: 20px;
    }

    .topbar {
      background-color: white;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid #dee2e6;
    }
  </style>
</head>

<body>

  <!-- Sidebar -->
  <div class="sidebar p-3">
    <div class="text-center mb-3">
      <h5><i class="bi bi-hospital"></i>Library Life</h5>
    </div>
    <div class="user-info">
      <img src="/stylesheets/img/foto1.jpg" width="70" alt="User">
      <h6 class="mt-2 mb-0">Jorge Oviedo</h6>
      <small>Administrador</small>
    </div>
    <div class="px-2">
      <div class="nav flex-column">
        <a href="/books" class="nav-link <%= currentPath === '/' ? 'bg-danger-subtle text-dark' : '' %>">
          <i class="bi bi-house me-2"></i>Libros
        </a>
        <a href="/books/authors_list"
          class="nav-link <%= currentPath === '/books/authors_list' ? 'bg-danger-subtle text-dark' : '' %>">
          <i class="bi bi-house me-2"></i>Autores
        </a>
        <a href="/books/users/list"
          class="nav-link <%= currentPath === '/books/users/list' ? 'bg-danger-subtle text-dark' : '' %>">
          <i class="bi bi-person-plus me-2"></i>Lista Usuarios
        </a>
        <a href="/books/editorials"
          class="nav-link <%= currentPath === '/books/editorials' ? 'bg-danger-subtle text-dark' : '' %>">
          <i class="bi bi-building me-2"></i>Editoriales
        </a>
        <a href="/books/categorias"
          class="nav-link <%= currentPath === '/books/categorias' ? 'bg-danger-subtle text-dark' : '' %>">
          <i class="bi bi-tags me-2"></i>Categorías
        </a>
        <a href="/books/loans/all" class="nav-link">
          <i class="bi bi-people me-2"></i>Préstamos de Libros
        </a>
        <a href="/books/reporte"
          class="nav-link <%= currentPath === '/books/reporte' ? 'bg-danger-subtle text-dark' : '' %>">
          <i class="bi bi-person-plus me-2"></i>reportes
        </a>
        <a href="/books/logout" class="nav-link">
          <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
        </a>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <div class="main-content">
    <!-- Topbar -->
    <div class="topbar">
      <h5 class="mb-0 fw-bold">Editar Usuario</h5>
      <div class="d-flex align-items-center">
        <i class="bi bi-bell me-3"></i>
        <span>Jorge Oviedo</span>
        <img src="/stylesheets/img/foto1.jpg" alt="User" class="ms-2" width="35" height="35"
          style="border-radius: 50%;">
      </div>
    </div>

    <!-- Formulario de edición -->
    <div class="container mt-4" style="max-width: 600px;">
      <h3 class="mb-4">Editar Usuario</h3>
      <form action="/books/users/edit/<%= user.id %>" method="POST">
        <div class="mb-3">
          <label class="form-label">Usuario</label>
          <input type="text" class="form-control" name="username" value="<%= user.username %>" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Tipo de Documento</label>
          <select class="form-control" name="tipo_documento">
            <option value="CC" <%=user.tipo_documento==='CC' ? 'selected' : '' %>>Cédula de Ciudadanía</option>
            <option value="TI" <%=user.tipo_documento==='TI' ? 'selected' : '' %>>Tarjeta de Identidad</option>
            <option value="CE" <%=user.tipo_documento==='CE' ? 'selected' : '' %>>Cédula de Extranjería</option>
            <option value="Pasaporte" <%=user.tipo_documento==='Pasaporte' ? 'selected' : '' %>>Pasaporte</option>
          </select>
        </div>

        <div class="mb-3">
          <label class="form-label">Número de Documento</label>
          <input type="text" class="form-control" name="documento" value="<%= user.documento %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Dirección</label>
          <input type="text" class="form-control" name="direccion" value="<%= user.direccion %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Teléfono</label>
          <input type="text" class="form-control" name="telefono" value="<%= user.telefono %>">
        </div>
        <div class="mb-3">
          <label class="form-label">Nueva Contraseña</label>
          <input type="password" class="form-control" name="password" placeholder="Dejar en blanco para no cambiar">
        </div>
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a href="/books/users/list" class="btn btn-secondary">Cancelar</a>
      </form>
    </div>
  </div>

</body>

</html>