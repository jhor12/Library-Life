<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <title>BiblioApp - Categorías</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f5f7fa;
        }

        .sidebar {
            width: 250px;
            background-color: #fff;
            height: 100vh;
            position: fixed;
            border-right: 1px solid #dee2e6;
        }

        .sidebar .user-info {
            text-align: center;
            padding: 20px 10px;
        }

        .sidebar .user-info img {
            border-radius: 50%;
        }

        .sidebar .nav-link.active {
            background-color: #f8d7da;
            color: #dc3545;
            font-weight: bold;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .topbar {
            background-color: white;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #dee2e6;
        }

        .card-stats {
            border-left: 4px solid;
        }

        .card-blue {
            border-color: #0d6efd;
        }

        .card-pink {
            border-color: #dc3545;
        }

        .card-green {
            border-color: #198754;
        }

        .card-facebook {
            background-color: #1877f2;
            color: white;
        }

        .card-site {
            background-color: #f72878;
            color: white;
        }

        .table-hover tbody tr:hover {
            background-color: #f0f8ff;
            cursor: pointer;
        }

        .table thead th {
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar p-3">
        <div class="text-center mb-3">
            <h5><i class="bi bi-hospital"></i>Library Life</h5>
        </div>
        <div class="user-info">
            <img src="/stylesheets/img/foto1.jpg" width="70" alt="User">
            <h6 class="mt-2 mb-0">Jorge Oviedo</h6>
            <small>Menu</small>
        </div>
        <div class="px-2">
            <div class="nav flex-column">
                <a href="/books" class="nav-link <%= currentPath === '/' ? 'bg-danger-subtle text-dark' : '' %>">
                    <i class="bi bi-house me-2"></i>Libros
                </a>
                <a href="/books/authors_list"
                    class="nav-link <%= currentPath === '/books/authors_list' ? 'bg-danger-subtle text-dark' : '' %>">
                    <i class="bi bi-house me-2"></i>Autores
                </a>
                <a href="/books/users/list"
                    class="nav-link <%= currentPath === '/books/users/list' ? 'bg-danger-subtle text-dark' : '' %>">
                    <i class="bi bi-person-plus me-2"></i>Lista Usuarios
                </a>
                <a href="/books/editorials"
                    class="nav-link <%= currentPath === '/books/editorials' ? 'bg-danger-subtle text-dark' : '' %>">
                    <i class="bi bi-building me-2"></i>Editoriales
                </a>
                <a href="/books/categorias"
                    class="nav-link <%= currentPath === '/books/categorias' ? 'bg-danger-subtle text-dark' : '' %>">
                    <i class="bi bi-tags me-2"></i>Categorías
                </a>
                <a href="/books/loans/all" class="nav-link">
                    <i class="bi bi-people me-2"></i>Préstamos de Libros
                </a>
                <a href="/books/reporte"
                    class="nav-link <%= currentPath === '/books/reporte' ? 'bg-danger-subtle text-dark' : '' %>">
                    <i class="bi bi-person-plus me-2"></i>reportes
                </a>
                <a href="/books/logout" class="nav-link">
                    <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                </a>
            </div>
        </div>
    </div>
    <!-- Main content -->
    <div class="main-content ">
        <div class="topbar">
            <h5 class="mb-0 fw-bold">Lista Categorías</h5>
            <div class="d-flex align-items-center">
                <i class="bi bi-bell me-3"></i>
                <span>Jorge Oviedo</span>
                <img src="/stylesheets/img/foto1.jpg" alt="User" class="ms-2" width="35" height="35"
                    style="border-radius: 50%;">
            </div>
        </div>

        <!-- Mensajes -->
        <% if (messages.success) { %>
            <div class="alert alert-success mt-3" id="successAlert"><%- messages.success %></div>
            <% } %>
                <% if (messages.error) { %>
                    <div class="alert alert-danger mt-3" id="errorAlert"><%- messages.error %></div>
                    <% } %>

                        <!-- Lista de Categorías -->
                        <div
                            class="card mt-4 shadow-sm border border-primary shadow-lg p-3 mb-5 bg-body-tertiary rounded">
                            <div
                                class="card-header d-flex justify-content-between align-items-center bg-primary text-white ">
                                <h6 class="mb-0"><i class="bi bi-tags me-2"></i> Categorías Registradas</h6>
                                <a href="/books/categories/add" class="btn btn-light btn-sm">
                                    <i class="bi bi-plus-circle me-1"></i> Agregar Categoría
                                </a>
                            </div>
                            <div class="card-body">
                                <% if (categorias && categorias.length) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle text-center">
                                            <thead class="table-light">
                                                <tr>
                                                    <th>#</th>
                                                    <th>Nombre</th>
                                                    <th>Acción</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% categorias.forEach((categoria, index)=> { %>
                                                    <tr>
                                                        <td><strong>
                                                                <%= index + 1 %>
                                                            </strong></td>
                                                        <td>
                                                            <%= categoria.name %>
                                                        </td>
                                                        <td>
                                                            <a href="/books/categories/edit/<%= categoria.id %>"
                                                                class="btn btn-outline-success btn-sm me-1">
                                                                <i class="bi bi-pencil-square"></i>
                                                            </a>
                                                            <a href="/books/categories/delete/<%= categoria.id %>"
                                                                class="btn btn-outline-danger btn-sm"
                                                                onclick="return confirm('¿Estás seguro de eliminar esta categoría?')">
                                                                <i class="bi bi-trash"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                        <!-- Paginación -->
                                        <nav>
                                            <ul class="pagination justify-content-center" id="pagination"></ul>
                                        </nav>
                                    </div>
                                    <% } else { %>
                                        <p class="text-center text-muted">¡No se encontraron categorías registradas!</p>
                                        <% } %>
                            </div>
                        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-white text-center text-muted py-3 border-top mt-4" style="margin-left: 250px;">
        <div class="container">
            <small>&copy; <%= new Date().getFullYear() %> Biblioteca Georgie. Todos los derechos reservados.</small><br>
            <small>Desarrollado por Jorge Oviedo</small>
        </div>
    </footer>
    <script>
        // --- Paginado simple en frontend ---
        const rowsPerPage = 7;
        const table = document.querySelector('.table tbody');
        const rows = Array.from(table ? table.querySelectorAll('tr') : []);
        const pagination = document.getElementById('pagination');
        let currentPage = 1;
        const totalPages = Math.ceil(rows.length / rowsPerPage);

        function showPage(page) {
            currentPage = page;
            rows.forEach((row, i) => {
                row.style.display = (i >= (page - 1) * rowsPerPage && i < page * rowsPerPage) ? '' : 'none';
            });
            renderPagination();
        }

        function renderPagination() {
            if (!pagination) return;
            pagination.innerHTML = '';
            for (let i = 1; i <= totalPages; i++) {
                pagination.innerHTML += `
        <li class="page-item${i === currentPage ? ' active' : ''}">
          <a class="page-link" href="#" onclick="showPage(${i});return false;">${i}</a>
        </li>`;
            }
        }

        if (rows.length > 0) showPage(1);
    </script>
    <script>
        setTimeout(() => {
            const success = document.getElementById('successAlert');
            const error = document.getElementById('errorAlert');
            if (success) success.style.display = 'none';
            if (error) error.style.display = 'none';
        }, 3000);
    </script>
</body>

</html>